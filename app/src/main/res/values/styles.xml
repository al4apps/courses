<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AndroidHeadline" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">28sp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AndroidTitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="CoursesButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@drawable/button_states</item>
        <item name="rippleColor">@color/green_button_ripple</item>
        <item name="android:textAppearance">@style/AndroidButtonTextStyle</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AndroidButtonTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/light_grey</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="android:maxLines">1</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="SearchInputLayoutStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_grey</item>
        <item name="boxBackgroundColor">@color/dark_grey</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_text_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_text_radius</item>
        <item name="android:maxLines">1</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="AndroidBodyMedium14" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AndroidBodyMedium18" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AndroidButtonSmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="fontWeight">600</item>
    </style>

    <style name="AndroidBodySmall12" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="AndroidBodySmall12Active" parent="AndroidBodySmall12">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="AndroidBodySmall12Inactive" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>